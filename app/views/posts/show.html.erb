<div class="post-body">
  <div class="post-main">
    <div class="post">
      <div class="content-post">
        <div class="show-post">
          <div class="post-user-nickname">
            <%= link_to "#{@post.user.nickname}", user_path(@post.user.id) %>
          </div>
          <%= image_tag @post.image, class:"post-image" %>
          <div class="name">
            <%= @post.name %>
          </div>
          <div class="likes" id="post_<%= @post.id %>">
            <%= render 'post', post: @post %>
          </div>
          <p><%= @post.text %></p>
          <ul class="tag">
            <li class="tag-list">
              <% @post.tags.each do |tag| %>
                <%= link_to "##{tag.tagname}", posts_path(params[:tag_id]) %>
              <% end%>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="comment-area">
    <div class="container">
      <%= form_with(model: [@post, @comment], local: true) do |f| %>
        <%= f.text_area :comment, placeholder: "コメントする", rows: "2", class:"comment-box" %>
        <%= f.submit "SEND", class:"comment-submit-btn" %>
      <% end %>
      <div class="comment-show">
        <h4>＊コメント一覧＊</h4>
        <% if @comments %>
          <% @comments.each do |comment| %>
            <p>
              <div>
                <%= link_to comment.user.nickname, "users/#{comment.user_id}" %> :
                <%= comment.comment %>
              </div>
            </p>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="post-btn">
    <div class="show-btns">
      <div class="edit-btn">
        <%= link_to 'Edit', edit_post_path %>
      </div>
      <div class="delete-btn">
        <%= link_to 'Delete', post_path(@post.id), method: :delete %>
      </div>
    </div>
  </div>
</div>