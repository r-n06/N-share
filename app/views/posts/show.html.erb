<div class="contents">
  <div class="post">
    <div class="content-post">
      <div class="show-post">
        <%= image_tag @post.image, class:"post-image" %>
          <div class="name">
            <%= @post.name %>
          </div>
          <p><%= @post.text %></p>
          <ul class="tag">
            <li class="tag-list">
              <% @post.tags.each do |tag| %>
                #<%= tag.tagname %>
              <% end%>
            </li>
          </ul>

          </div>
      </div>
    </div>
    <div class="show-btns">
      <div class="edit-btn">
        <%= link_to 'Edit', edit_post_path %>
      </div>
      <div class="delete-btn">
        <%= link_to 'Delete', post_path(@post.id), method: :delete %>
      </div>
    </div>
  </div>
</div>