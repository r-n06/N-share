<div class="new-post">
  <div class="new-post-form">
    <div class="post-form">
      <%= form_with(model: @post, url: posts_path, local: true) do |f| %>
      <%= render "devise/shared/error_messages", model: f.object%>
        <div class="post-form">
          <div class="field">
            <%= f.label :image,"Image", class:"post-new-label"%><br />
            <%= f.file_field :image %>
          </div>

          <div class="tag-field", id='tag-field'>
            <%= f.label :tagname, "タグ", class:"tagname-font" %>
            <div class="tag-box">
              <%= f.text_field :tagname, class:"input-tag", id:"posts_tag_tagname" %>
              <%= f.submit "選択", class:"tag-select-btn" %>
            </div>
          </div>
          <div id="search-result">
          </div>

          <div class="field">
            <%= f.label :image,"Name", class:"post-new-label" %><br />
            <%= f.text_field :name, placeholder: "Name", class:"post-new-name" %>
          </div>

          <div class="field">
            <%= f.label :image,"Text", class:"post-new-label" %><br />
            <%= f.text_area :text, placeholder: "text", class:"post-new-text" %>
          </div>
        </div>
        <div class="post-send">
          <div class="send-btn">
            <%= f.submit "SEND", class:"submit-btn" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>