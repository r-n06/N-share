<div class="contents">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="content_post">
        <div class="post-each">
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.image, class:"post-image" %>
          <% end %>
          <div class="name">
            <%= post.name %>
          </div>
          <p><%= post.text %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>